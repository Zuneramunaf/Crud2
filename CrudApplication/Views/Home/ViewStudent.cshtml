@model IEnumerable<CrudApplication.Models.Student>

@{
    ViewData["Title"] = "ViewStudent";
}
@{
    if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
         @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    if (TempData["Update"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Update"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    if (TempData["Delete"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Delete"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<h1>ViewStudent</h1>

<p>
    <a asp-action="AddStudents"  class="btn btn-warning btn-close-white">AddStudent</a>
    

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>Details</th>


            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                     
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
               
            </td>
                <td> <a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
        </tr>
}
    </tbody>
</table>
